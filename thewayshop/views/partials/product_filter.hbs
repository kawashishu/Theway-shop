<div class="product-item-filter row">
    <div class="col-12 col-sm-8 text-center text-sm-left">
        <div class="toolbar-sorter-right">
            <span>Sort by </span>
            <select id="basicfilter" class="selectpicker show-tick form-control" data-placeholder="$ USD">
                <option {{#ifeq sort_by 'nothing'}}data-display="Select"{{/ifeq}} value="nothing">Nothing</option>
                <option {{#ifeq sort_by 'price-desc'}}data-display="Select"{{/ifeq}} value="price-desc">High Price → Low Price</option>
                <option {{#ifeq sort_by 'price-asc'}}data-display="Select"{{/ifeq}} value="price-asc">Low Price → High Price</option>
                <option {{#ifeq sort_by 'best-seller'}}data-display="Select"{{/ifeq}} value="best-seller">Best Selling</option>
            </select>
        </div>
        <p>{{total_product}} results</p>
    </div>
    <div class="col-12 col-sm-4 text-center text-sm-right">
        <ul class="nav nav-tabs ml-auto">
            <li>
                <a class="nav-link active" href="#grid-view" data-toggle="tab"> <i class="fa fa-th"></i> </a>
            </li>
            <li>
                <a class="nav-link" href="#list-view" data-toggle="tab"> <i class="fa fa-list-ul"></i> </a>
            </li>
        </ul>
    </div>
</div>