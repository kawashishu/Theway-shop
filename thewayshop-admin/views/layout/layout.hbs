<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="Dashboard">
    <meta name="keyword" content="Dashboard, Bootstrap, Admin, Template, Theme, Responsive, Fluid, Retina">

    <title>{{title}}</title>

    <link rel="shortcut icon" type="image/x-icon" href="/images/favicon.ico" />
    <!-- Bootstrap core stylesheets -->
    <link href="/stylesheets/bootstrap.css" rel="stylesheet">
    <!--external stylesheets-->
    <link href="/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/stylesheets" href="/stylesheets/zabuto_calendar.css">
    <link rel="stylesheet" type="text/stylesheets" href="/javascripts/gritter/css/jquery.gritter.css" />
    <link rel="stylesheet" type="text/stylesheets" href="/lineicons/style.css">    
    
    <!-- Custom styles for this template -->
    <link href="/stylesheets/style.css" rel="stylesheet">
    <link href="/stylesheets/style-responsive.css" rel="stylesheet">

    <script src="/javascripts/chart-master/Chart.js"></script> 
    {{{_sections.style}}}
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
      <section id="container">
           <header class="header black-bg">
              <div class="sidebar-toggle-box">
                  <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
              </div>
            <!--logo start-->
            <a href="/" class="logo"><b>TheWayShop Admin</b></a>
            <!--logo end-->
            <div class="nav notify-row" id="top_menu">
                <!--  notification start -->
                <ul class="nav top-menu">
                    <!-- settings start -->
                    <!-- inbox dropdown start-->
                    <li id="header_inbox_bar" class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="index.html#">
                            <i class="fa fa-envelope-o"></i>
                            <span class="badge bg-theme">{{chat.length}}</span>
                        </a>
                        <ul class="dropdown-menu extended inbox">
                            <div class="notify-arrow notify-arrow-green"></div>
                            {{#if chat}}
                            <li>
                            <p class="green">You have {{chat.length}} new messages</p>
                            </li>
                            {{#each chat}}
                            <li>
                                <a href="/">
                                    <span class="photo"><img alt="avatar" src="/images/ui-zac.jpg"></span>
                                    <span class="subject">
                                    <span class="from">{{this.name}}</span>
                                    <span class="time">{{this.time}} h ago</span>
                                    </span>
                                    <span class="message">
                                        {{this.content}}
                                    </span>
                                </a>
                            </li>
                            {{/each}}
                            {{else}}
                            <li>
                                <p class="green">No messages</p>
                            </li>
                            {{/if}}
                            <li>
                                <a href="/">See all messages</a>
                            </li>
                        </ul>
                    </li>
                    <!-- inbox dropdown end -->
                </ul>
                <!--  notification end -->
            </div>
            <div class="top-menu">
            	<ul class="nav pull-right top-menu">
                    <li><a class="logout" href="/logout" id="logout">Logout</a></li>
            	</ul>
            </div>
        </header>
        <!--header end-->
        
        <!--sidebar start-->
        <aside>
            <div id="sidebar"  class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu" id="nav-accordion">
                
                    <p class="centered"><a href="/profile"><img src="{{#if user.image}}{{user.image}}{{else}}/images/ui-sam.jpg{{/if}}" class="img-circle" width="60"></a></p>
                    <h5 class="centered">{{user.username}}</h5>
                        
                    <li class="mt">
                        <a {{#if dashboard_active}}class="active"{{/if}} href="/">
                            <i class="fa fa-dashboard"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li class="mt">
                        <a {{#if product_active}}class="active"{{/if}} href="/product?page=1">
                            <i class="fa fa-th"></i>
                            <span>Product</span>
                        </a>
                    </li>
                    <li class="mt">
                        <a {{#if manager_active}}class="active"{{/if}} href="/manager">
                            <i class="fa fa-user"></i>
                            <span>Manager</span>
                        </a>
                    </li>
                    <li class="mt">
                        <a {{#if user_active}}class="active"{{/if}} href="/user">
                            <i class="fa fa-users"></i>
                            <span>User</span>
                        </a>
                    </li>
                    <li class="mt">
                        <a {{#if order_active}}class="active"{{/if}} href="/orders">
                            <i class="fa fa-users"></i>
                            <span>Order</span>
                        </a>
                    </li>
                    <li class="sub-menu">
                        <a {{#if table_active}}class="active"{{/if}} href="javascript:;" >
                            <i class="fa fa-database"></i>
                            <span>Tag&Category</span>
                        </a>
                        <ul class="sub">
                            {{#each tables}}
                            <li><a  href="/tables/{{this}}">{{this}}</a></li>
                            {{/each}}
                        </ul>
                    </li>
                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        {{{body}}}
      </section>

    
     <!-- javascripts placed at the end of the document so the pages load faster -->
    <script src="/javascripts/jquery.js"></script>
    <script src="/javascripts/jquery-1.8.3.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="/javascripts/jquery.dcjqaccordion.2.7.js"></script>
    <script src="/javascripts/jquery.scrollTo.min.js"></script>
    <script src="/javascripts/jquery.nicescroll.js" type="text/javascript"></script>
    <script src="/javascripts/jquery.sparkline.js"></script>


    <!--common script for all pages-->
    <script src="/javascripts/common-scripts.js"></script>
    
    <script type="text/javascript" src="/javascripts/gritter/js/jquery.gritter.js"></script>
    <script type="text/javascript" src="/javascripts/gritter-conf.js"></script>

    <!--script for this page-->
    <script src="/javascripts/sparkline-chart.js"></script>    
	<script src="/javascripts/zabuto_calendar.js"></script>	
	<script src="/javascripts/jquery.twbsPagination.js"></script>
    {{{_sections.script}}}
  </body>
</html>