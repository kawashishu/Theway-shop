<section id="main-content">
    <section class="wrapper site-min-height">
    <div class="col-md-6">
        <h3><i class="fa fa-angle-right"></i>Manager</h3>
    </div>
    
    <div class="col-md-3">
        <button class="btn btn-warning" style="margin-top:5px;"> 
            <a href="/manager/add" style="color:#fcfcfc">Add new manager</a>
        </button>
    </div>
    <div class="row mt">
        <div class="col-lg-12">
            <div class="row">
                <! -- PROFILE 02 PANEL -->
                {{#each managers}}
                <div class="col-lg-4 col-md-4 col-sm-4 mb">
                    <div class="content-panel pn">
                        <div id="profile-02">
                            <div class="user">
                                <img {{#if this.image}}src="{{this.image}}"{{else}}src="/images/friends/fr-06.jpg"{{/if}} class="img-circle" width="80">
                                <h4>{{this.fullname}}</h4>
                            </div>
                        </div>
                        <div class="pr2-social centered">
                            <a href="#"><i class="fa fa-twitter"></i></a>
                            <a href="#"><i class="fa fa-facebook"></i></a>
                            <a href="#"><i class="fa fa-dribbble"></i></a>
                        </div>
                    </div><! --/panel -->
                </div><!--/ col-md-4 -->
                {{/each}}
            </div>
        </div>
    </div>
</section><! --/wrapper -->
</section><!-- /MAIN CONTENT -->