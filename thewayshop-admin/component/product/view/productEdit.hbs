
<section id="main-content">
    <section class="wrapper">
        <!-- BASIC FORM ELELEMNTS -->
        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i> {{product.title}}</i>
                        {{#if message}}
                        <i class="fa fa-angle-left"></i>{{message}}<i class="fa fa-angle-right"></i>
                        {{/if}}
                    </h4>
                    <button class="btn btn-info"><a href="/product/delete/{{product.id}}">DELETE</a></button>
                    <form class="form-horizontal style-form" method="post">
                        {{#each product}}
                        <div class="form-group">
                            <label class="col-sm-2 col-sm-2 control-label">{{@key}}</label>
                            {{#ifeq @key 'image'}}
                            <div class="col-sm-7">
                                <input type="text" class="form-control" name="{{@key}}" value="{{this}}">
                                {{#each ../subimage}}
                                <input type="text" class="form-control" name="subimage1" value="{{this.image}}">
                                {{/each}}
                            </div>
                            <img src="{{this}}" width="80">
                            {{#each ../subimage}}
                            <img src="{{this.image}}" width="80">
                            {{/each}}
                            {{else}}
                            {{#ifeq @key 'tag_id'}}
                            <div class="col-sm-10">
                                <select name="tag_id" class="form-control" style="width: 30%;">
                                    {{#each ../tagList}}
                                    <option value="{{this.id}}" {{#ifeq this.id ../this}}selected{{/ifeq}}>{{this.name}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            {{else}}
                            {{#ifeq @key 'state'}}
                            <div class="col-sm-10">
                                <select name="state" class="form-control" style="width: 30%;">
                                    <option value="new" {{#ifeq this 'new'}}selected{{/ifeq}}>NEW</option>
                                    <option value="top" {{#ifeq this 'top'}}selected{{/ifeq}}>TOP</option>
                                    <option value="out" {{#ifeq this 'out'}}selected{{/ifeq}}>OUT</option>
                                </select>
                            </div>
                            {{else}}
                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="{{@key}}" value="{{this}}" {{#ifeq @key 'sold'}} readonly {{/ifeq}} {{#ifeq @key 'create_date'}}readonly{{/ifeq}}>
                            </div>
                            {{/ifeq}}
                            {{/ifeq}}
                            {{/ifeq}}
                        </div>
                        {{/each}}
                        <button type="submit">Submit</button>
                    </form>
                </div>
            </div><!-- col-lg-12-->      	
        </div><!-- /row -->
    </section><! --/wrapper -->
</section><!-- /MAIN CONTENT -->